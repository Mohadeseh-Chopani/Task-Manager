<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_item_task"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginStart="13dp"
    android:layout_marginEnd="13dp"
    android:layout_height="75dp"
    android:layout_marginTop="20dp">

    <ImageView
        android:id="@+id/checkedItem"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/shape_checkbox_default"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:text="Task Title"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/checkedItem"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/importanceView"
        android:layout_width="8dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>